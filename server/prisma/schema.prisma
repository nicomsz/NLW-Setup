generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id    String   @id @default(cuid())
  title String
  date  DateTime

  @@map("habits")
}

model Day {
  id String @id @default(cuid())

  date DateTime

  @@unique([date])
}

model HabitWeekDays {
  id String @id @default(cuid())

  habit_id String
  week_day Int

  @@unique([habit_id, week_day])
  @@map("day_habits")
}

model DayHabit {
  id String @id @default(cuid())

  day_id   String
  habit_id String

  @@unique([day_id, habit_id])
  @@map("days")
}
